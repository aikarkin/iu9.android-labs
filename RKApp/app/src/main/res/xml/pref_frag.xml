<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@integer/default_no_of_days"
        android:inputType="number"
        android:key="selected_no_of_days"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Number of days" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/currency_names"
        android:entryValues="@array/currency_names"
        android:key="selected_currency"
        android:title="Currency" />

</PreferenceScreen>